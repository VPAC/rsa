<configuration>

	<appender name="STDERR" class="ch.qos.logback.core.ConsoleAppender">
		<target>System.err</target>
		<encoder>
			<pattern>%-5level %logger{5} - %msg%n
			</pattern>
		</encoder>
	</appender>

	<appender name="MINIMAL" class="ch.qos.logback.core.ConsoleAppender">
		<target>System.err</target>
		<encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
			<layout class="org.vpac.ndg.application.TimeDeltaLayout">
				<pattern>%-5level %msg%n</pattern>
			</layout>
		</encoder>
	</appender>

	<!-- The TimeDeltaLayout is like the default layout class, but prepends the
	     time since program start and the time since the last message to each
	     message. -->
	<appender name="TIMER" class="ch.qos.logback.core.ConsoleAppender">
		<target>System.err</target>
		<encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
			<layout class="org.vpac.ndg.application.TimeDeltaLayout">
				<pattern>%-5level %logger{5} - %msg%n</pattern>
			</layout>
		</encoder>
	</appender>

	<root level="error">
		<appender-ref ref="STDERR" />
	</root>

	<!-- The following entries override the "root" definitions above.
	     Error levels are, in ascending order:

	         trace, debug, info, warn, error, fatal

	-->

	<logger name="org.vpac.ndg" level="warn" additivity="false">
		<appender-ref ref="TIMER"/>
	</logger>

	<!-- For messages generated by the command client, print less contextual
	     information. -->
	<logger name="org.vpac.ndg.cli" level="warn" additivity="false">
		<appender-ref ref="TIMER"/>
	</logger>

	<logger name="org.vpac.ndg.query" level="warn" additivity="false">
		<appender-ref ref="TIMER"/>
	</logger>
	<logger name="org.hibernate" level="error"/>
	<logger name="org.springframework" level="error"/>
	<logger name="com.mchange.v2.c3p0" level="warn"/>

</configuration>
